<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout android:layout_width="80dp"
        android:layout_height="160dp"
        android:orientation="vertical" >
        
    	<ImageView android:id="@+id/widget_logo"
    	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/my_appwidget_pic" />
    	
	</LinearLayout>
	
    <LinearLayout android:layout_width="200dp"
        android:layout_height="160dp"
        android:orientation="vertical" >
    	
        <TextView android:id="@+id/widget_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:52"
            android:textSize="80sp" />
        
        <TextView android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09月24日 星期五"
            android:textSize="20sp" />
        
    </LinearLayout>
    
</LinearLayout>
